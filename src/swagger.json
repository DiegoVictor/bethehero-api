                    "allOf": [
                      {
                        "$ref": "#/components/schemas/Incident"
                      },
                      {
                        "title": "Incident",
                        "properties": {
                          "ngo_id": {
                            "type": "string"
                          },
                          "ngo_url": {
                            "type": "string"
                          }
                        }
                      }
                    ]
