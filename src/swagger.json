  "paths": {
    "/sessions": {
      "post": {
        "tags": ["sessions"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "title": "NGO",
                "properties": {
                  "id": {
                    "type": "string"
                  }
                }
              },
              "example": {
                "id": "33ceb990"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Authenticates user, return a Bearer Token and ngo's id and name",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ngo": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string"
                        },
                        "name": {
                          "type": "string"
                        }
                      }
                    },
                    "token": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "ngo": {
                    "id": "33ceb990",
                    "name": "Schinner and Sons"
                  },
                  "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6IjMzY2ViOTkwIiwiaWF0IjoxNjI5MzI5NTAyLCJleHAiOjE2Mjk5MzQzMDJ9.-IRuW7HE5cMLLGKSlmu3tGau3PsVco3YahHL36F3Mdg"
                }
              }
            }
          },
          "400": {
            "description": "Your NGO was not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "statusCode": 400,
                  "error": "Bad Request",
                  "message": "Your NGO was not found",
                  "code": 240,
                  "docs": "https://github.com/DiegoVictor/bethehero-api#errors-reference"
                }
              }
            }
          }
        }
      }
    },
    "/ngos": {
      "get": {
        "tags": ["NGOS"],
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "required": false,
            "example": 1,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lists NGOs",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "allOf": [
                      {
                        "$ref": "#/components/schemas/NGO"
                      },
                      {
                        "title": "NGO",
                        "properties": {
                          "incidents_url": {
                            "type": "string"
                          }
                        }
                      }
                    ]
                  }
                },
                "example": [
                  {
                    "id": "33ceb990",
                    "name": "Schinner and Sons",
                    "email": "diegovictorgonzaga@gmail.com",
                    "whatsapp": "39379976591",
                    "city": "Corinefurt",
                    "uf": "NE",
                    "incidents_url": "http://localhost:3333/v1/ngos/33ceb990/incidents",
                    "url": "http://localhost:3333/v1/ngos/33ceb990"
                  }
                ]
              }
            },
            "headers": {
              "X-Total-Count": {
                "description": "Total number of registries in the database",
                "schema": {
                  "type": "integer"
                }
              },
              "Link": {
                "description": "Next, Previous, First and Last page's urls",
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["NGOS"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "name",
                  "email",
                  "whatsapp",
                  "city",
                  "uf"
                ],
                "title": "NGO",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "whatsapp": {
                    "type": "string"
                  },
                  "city": {
                    "type": "string"
                  },
                  "uf": {
                    "type": "string"
                  }
                }
              },
              "example": {
                "name": "Schinner and Sons",
                "email": "diegovictorgonzaga@gmail.com",
                "whatsapp": "39379976591",
                "city": "Corinefurt",
                "uf": "NE"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Create a new NGO",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "id": "33ceb990"
                }
              }
            }
          }
        }
      }
    },
    "/ngos/{id}": {
      "get": {
