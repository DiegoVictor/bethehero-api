        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "title",
                  "description",
                  "value"
                ],
                "title": "Incident",
                "properties": {
                  "title": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "value": {
                    "type": "number"
                  }
                }
              },
              "example": {
                "title": "Forward Tactics Representative",
                "description": "Adipisci non assumenda ad sequi. Mollitia numquam voluptatum qui non nulla ad deleniti.",
                "value": 512.93
              }
            }
          }
        },
        "responses": {
          "201": {
